parametro           ::= expr



(* EXPRESSOES *)

listaExpressoes     ::= expr {',' expr}

expr                ::= termo {operadores termo}

termo               ::= fator {operador fator}

fator               ::= expr
                    | chamadaFuncao
                    | double
                    | inteiro
                    | booleano
                    | null
                    | string
                    | char
                    | float

operadores          ::= opAritmetico | opRelacional | opLogico

opAritmetico        ::= '+' | '‚öíÔ∏è' 
                    | '-' | '‚öîÔ∏è'
                    | '*' | 'üí£'
                    | '/' | 'ü™£'
                    | '%' | 'ü™µ'

opRelacional        ::= '==' | 'üß±üß±'
                    | '!=' | 'üß±‚¨ú'
                    | '<' | 'üîΩü™ú'
                    | '>' | 'üîºü™ú'
                    | '<=' | 'üß±üîΩ'
                    | '>=' | 'üß±üîº'

opLogico            ::= 'E' | 'üì¶'
                    | 'OU' | 'ü™®'

(* COMANDOS *)

listaComandos       ::= {comando}

comando             ::= Com-repetidor  (* for *)
                    | Com-observador   (* if *)
                    | Com-comparador   (* while *)
                    | Com-redstone     (* do-while *)
                    | Com-end          (* break *)
                    | Com-pular        (* continue *)
                    | Com-overworld    (* return *)
                    | Com-villager     (* typecast *)
                    | Com-carrinho     (* switch *)
                    | Com-declaracao   (* declarando ou acessando uma var*)
                    | Com-minerar      (* ++ *)
                    | Com-colocarBloco (* -- *)
                    | Com-regenerar    (* += *)
                    | Com-veneno       (* -= *)
                    | Com-creeper      (* *= *)

Com-repetidor       ::= PC-repetidor '(' declaracoes ';' listaExpressoes ';' listaExpressoes ')' '‚õèÔ∏è' listaComandos '‚¨õ'

Com-observador      ::= PC-observador '(' listaExpressoes ')' '‚õèÔ∏è' listaComandos '‚¨õ' { PC-liberador ['(' listaExpressoes ')'] '‚õèÔ∏è' listaComandos '‚¨õ' }

Com-comparador      ::= PC-comparador '(' listaExpressoes ')' '‚õèÔ∏è' listaComandos '‚¨õ'

Com-redstone        ::= PC-redstone '‚õèÔ∏è' listaComandos '‚¨õ' PC-comparador '(' listaExpressoes ')'

Com-end             ::= PC-end ';'

Com-pular           ::= PC-pular ';'

Com-overworld       ::= PC-overworld expr ';'

Com-villager        ::= PC-villager '(' tipo ',' tipo ')'    (* acho que teremos tipos aqui *)

trilhos             ::= PC-trilho expr '‚õèÔ∏è' listaComandos '‚¨õ'
Com-carrinho        ::= PC-carrinho '‚õèÔ∏è' trilhos {trilhos} PC-cacto '‚õèÔ∏è' listaComandos '‚¨õ'

Com-declaracao      ::= inventario | atribuiVar

Com-minerar         ::= PC-minerar '(' identificador ')' ';'

Com-colocarBloco    ::= PC-colocarBloco '(' identificador ')' ';'

Com-regenerar       ::= PC-regenerar '(' identificador ',' digito ')' ';'

Com-veneno          ::= PC-veneno '(' identificador ',' digito ')' ';'

Com-creeper         ::= PC-creeper '(' identificador ',' digito ')' ';'



topLevel            ::= topLevelElem | comentario
topLevelElem        ::= inventario | defFuncao

inventario          ::= PC-inventario '‚õèÔ∏è' (declaraVarTipo | declaraVarVetorTipo) '‚¨õ'

defFuncao           ::= assinaturaFuncao '‚õèÔ∏è' listaComandos '‚¨õ'

assinaturaFuncao    ::= tipo PC-craftingTable identificador '(' argumentos ')' '‚õèÔ∏è' listaComandos '‚¨õ'
assinaturaProced    ::= PC-vazio PC-enchantingTable identificador '(' argumentos ')' '‚õèÔ∏è' listaComandos '‚¨õ'

